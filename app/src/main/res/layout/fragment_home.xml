<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Texto de bienvenida -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:gravity="center"
        android:textColor="@color/textDefault"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón: Notas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGrades"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorOnPrimary"
        android:text="Notas"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/shape"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSchedule"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1" />

    <!-- Botón: Horario -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSchedule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorSecondary"
        android:textColor="@color/colorOnSecondary"
        android:text="Horario"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/shape"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="@id/btnGrades"
        app:layout_constraintStart_toEndOf="@id/btnGrades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1" />

    <!-- Botón: Buses -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBuses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorThird"
        android:textColor="@color/colorOnThird"
        android:text="Buses"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/shape"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnGrades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnClassroom"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1" />

    <!-- Botón: Buscador de Aulas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClassroom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorOnPrimary"
        android:text="Buscador de\nAulas"
        android:textSize="14sp"
        android:gravity="center"
        app:cornerRadius="12dp"
        app:strokeColor="@color/shape"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="@id/btnBuses"
        app:layout_constraintStart_toEndOf="@id/btnBuses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1" />

    <!-- Botón: Estado de Cuenta -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAccount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorOnPrimary"
        android:text="Estado de\nCuenta"
        android:textSize="14sp"
        android:gravity="center"
        app:cornerRadius="12dp"
        app:strokeColor="@color/shape"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnBuses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnReserve"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1" />

    <!-- Botón: Reserva de Salas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReserve"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorSecondary"
        android:textColor="@color/colorOnSecondary"
        android:text="Reserva de\nSalas"
        android:textSize="14sp"
        android:gravity="center"
        app:cornerRadius="12dp"
        app:strokeColor="@color/shape"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="@id/btnAccount"
        app:layout_constraintStart_toEndOf="@id/btnAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintDimensionRatio="1:1" />

</androidx.constraintlayout.widget.ConstraintLayout>
